{
  "manifest_version": 3,
  "name": "Vertical Bookmarks",
  "version": "1.0",
  "description": "A simple vertical bookmarks extension.",
  "permissions": ["sidePanel", "bookmarks", "storage"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-inactive.svg",
      "32": "icons/icon-inactive.svg"
    },
    "default_title": "Toggle Vertical Bookmarks"
  },
  "background": {
    "service_worker": "background.js"
  }
}
